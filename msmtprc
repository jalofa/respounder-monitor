sudo apt update
sudo apt install msmtp msmtp-mta


sudo nano /etc/msmtprc

defaults
auth           login
tls            off
tls_starttls   off
logfile        /var/log/msmtp

account        accountname
host           SMTP-SERVER
port           Port
from           absender@firma.de
user           auth-user@firma.de
passwordeval cat /etc/msmtp-auth.pass

account default : accountname
